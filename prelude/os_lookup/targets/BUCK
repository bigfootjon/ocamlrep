load("//os_lookup:defs.bzl", "os_lookup")

os_lookup(
    name = "os_lookup",
    cpu = select({
        "DEFAULT": None,
        "config//cpu:arm64": "arm64",
        "config//cpu:x86_64": "x86_64",
    }),
    platform = select({
        # unknown e.g. in the case of fat_platform
        "DEFAULT": "unknown",
        "config//os:linux": "linux",
        "config//os:macos": "macos",
        "config//os:windows": "windows",
    }),
    visibility = ["PUBLIC"],
)
